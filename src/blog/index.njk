---
layout: base
title: Blog
pagination:
  data: collections.posts
  size: 5
  alias: posts
permalink: "/blog/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}"
---

<h2>Blog Posts</h2>

{% for post in posts %}
<div class="card">
  <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  <p><small>{{ post.date | date("LLL d, yyyy") }}</small></p>
  <p>{{ post.data.description or post.templateContent | striptags | truncate(150) }}</p>
  <a class="button" href="{{ post.url }}">Read more</a>
</div>
{% endfor %}

{% if pagination.pages.length > 1 %}
<nav>
{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">← Newer</a>{% endif %}
Page {{ pagination.pageNumber + 1 }} of {{ pagination.pages.length }}
{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Older →</a>{% endif %}
</nav>
{% endif %}
